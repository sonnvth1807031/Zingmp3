<Page
    x:Class="App1.View.FormAddSong"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App1.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel>
            <TextBlock>Name</TextBlock>
            <TextBox x:ConnectionId='2' x:Name="Name"></TextBox>
            <TextBlock x:ConnectionId='3' x:Name="NameMessage" Visibility="Collapsed" Foreground="Red"></TextBlock>
            <TextBlock>Single</TextBlock>
            <TextBox x:ConnectionId='4' x:Name="Single"></TextBox>
            <TextBlock x:ConnectionId='5' x:Name="SingleMessage"  Visibility="Collapsed" Foreground="Red"></TextBlock>
            <TextBlock>Description</TextBlock>
            <TextBox x:ConnectionId='6' x:Name="Description"></TextBox>
            <TextBlock x:ConnectionId='7' x:Name="DescriptionMessage"  Visibility="Collapsed" Foreground="Red"></TextBlock>
            <TextBlock>Author</TextBlock>
            <TextBox x:ConnectionId='8' x:Name="Author"></TextBox>
            <TextBlock x:ConnectionId='9' x:Name="AuthorMessage"  Visibility="Collapsed" Foreground="Red"></TextBlock>
            <TextBlock>Thumbnail</TextBlock>
            <TextBox x:ConnectionId='10' x:Name="Thumbnail"></TextBox>
            <TextBlock x:ConnectionId='11' x:Name="ThumbnailMessage"  Visibility="Collapsed" Foreground="Red"></TextBlock>
            <TextBlock>Link</TextBlock>
            <TextBox x:ConnectionId='12' x:Name="Link"></TextBox>
            <TextBlock x:ConnectionId='13' x:Name="LinkMeesaga"  Visibility="Collapsed" Foreground="Red"></TextBlock>
            <Button x:ConnectionId='14' Content="Create Song"                           />
        </StackPanel>
    </Grid>
</Page>

